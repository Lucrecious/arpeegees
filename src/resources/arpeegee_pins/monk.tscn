onready var _status_effects := NodE.get_sibling(get_parent(), StatusEffectsList) as StatusEffectsList
onready var _fist_back := $FistBack as Node2D
onready var _fist_front := $FistFront as Node2D

func _ready() -> void:
	_status_effects.connect('effect_added_or_removed', self, '_on_effect_added_or_removed')

func _on_effect_added_or_removed() -> void:
	if not is_inside_tree():
		return
	
	if not _is_focusing_ki():
		return
	
	_fist_front.start()
	_fist_back.start()

func _is_focusing_ki() -> bool:
	for effect in _status_effects.get_all():
		if not effect.is_in_group('__focus_ki_status_effect'):
			continue
		return true
	return false
