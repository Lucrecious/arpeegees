[sub_resource type="Shader" id=1]
code = "shader_type canvas_item;

const float noise_scale_pixels = 8.0;
const float time_scale = (1.0 / 2500.0);

vec3 random3(vec3 c) {
	float j = 4096.0*sin(dot(c,vec3(17.0, 59.4, 15.0)));
	vec3 r;
	r.z = fract(512.0*j);
	j *= .125;
	r.x = fract(512.0*j);
	j *= .125;
	r.y = fract(512.0*j);
	return r-0.5;
}

void vertex() {
	vec3 time3 = vec3(0, 0, TIME) * time_scale;
	vec2 noise = random3(vec3(VERTEX.x, 0, VERTEX.y) + time3).xz * noise_scale_pixels;
	VERTEX.xy += noise;
}"

